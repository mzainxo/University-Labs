<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/bgmclaren"
    tools:context=".FullScreenActivity">

        <TextView
            android:id="@+id/labelferrari"
            android:layout_marginTop="20dp"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:fontFamily="serif"
            android:text="Fullscreen Activity"
            android:textColor="@color/white"
            android:textFontWeight="700"
            android:textSize="34dp" />
        <ImageView
            android:id="@+id/imageView2"
            android:layout_marginTop="20dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="1dp"
            app:srcCompat="@drawable/f1logo" />

        <Button
            android:id="@+id/ExitFullScreenButton"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:backgroundTint="#ff0318"
            android:fontFamily="sans-serif"
            android:layout_alignParentBottom="true"
            android:text="Exit full screen"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginHorizontal="4dp"
            android:layout_marginBottom="30dp"
            />

</RelativeLayout>